								<td width="15%"><apex:outputField value="{!organization[fieldOrg]}" rendered="{!fieldOrg != '' && !isCustom}"/>
									<apex:outputText value="{!customShr}" rendered="{!isCustom}"/>
								</td>
								<td width="15%"></td>
							</tr>
						</apex:outputPanel>
