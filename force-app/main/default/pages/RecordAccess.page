											<td colspan="5">
												<apex:outputText value="<b>Roles above:</b> <i>{!userRoleMap[territory2wrp.userTerritory.UserRoleId]['Name']}</i> assigned to <i>{!territory2wrp.userTerritory.Name}</i>" escape="false"/>
